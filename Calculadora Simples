<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset=" UTF-8">
        <meta name="viewport", content="width-device-width, inital-scale = 1.0 ">
        <title>Calculadora Simples</title>
    </head>
    <body>
        <script>
            function  result(op) {
                if (op === "+") {
                    res.value= parseInt(v1.value)+parseInt(v2.value);
                }

                else if (op === "-") {
                    res.value= parseInt(v1.value)-parseInt(v2.value);
                }

                else if (op === "x") {
                    res.value= parseInt(v1.value)*parseInt(v2.value);
                }

                else if (op === ":") {
                    res.value= parseInt(v1.value)/parseInt(v2.value);
                }

            }

            
        </script>

        <h1>Calculadora Simples</h1>
        Valor1: <input type="" id="v1" value="0"> </br>
        Valor2: <input type="text" id="v2" value="0"> </br>
        <input type="button" value="soma" onclick="result('+')">
        <input type="button" value="subtrair" onclick="result('-')">
        <input type="button" value="multiplicar" onclick="result('x')">
        <input type="button" value="dividir" onclick="result(':')"> </br>
        Resultado: <input type="text" id="res" value="" readonly></br>
    </body>
</html>

